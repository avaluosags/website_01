---
import H2 from '../components/TextComponents/H2.astro';

interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<div class={`flex flex-col gap-y-8 bg-primary_bg px-5 xl:px-[30rem] py-10 xl:py-44 border border-primary_super ${className}`}>
  <H2>{title}</H2>
  <slot />
</div>
