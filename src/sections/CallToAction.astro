---
import Button from '../components/Button.astro';

interface Props {
  title: string;
  subtitle: string;
  buttonHref: string;
  buttonText: string;
  buttonPhone: string;
  buttonIcon?: string;
}

const {
  title,
  subtitle,
  buttonHref,
  buttonText,
  buttonPhone,
  buttonIcon
} = Astro.props;
---

<div class="relative overflow-hidden py-[14.5rem] md:py-[19rem] bg-white/80 border border-primary_super">
  <div class="absolute bottom-0 top-0 z-[2] flex w-screen flex-col items-center justify-center hyphens-auto px-8 text-center">
    <h3 class="max-w-4xl text-3xl md:text-4xl lg:text-6xl mb-4 md:mb-8 font-bold tracking-tight">
      {title}
    </h3>
    <span class="mb-4 max-w-2xl text-center text-base sm:text-lg md:mb-8 md:text-2xl">
      {subtitle}
    </span>
    <div class="mt-4 flex w-full flex-col items-center justify-center gap-x-8 gap-y-4 text-sm sm:flex-row md:gap-y-0">
      <a href={buttonHref}>
        <Button
            size="default"
            theme="primary-bg"
            text={buttonText}
            iconRight={buttonIcon}
        />
      </a>
    </div>
  </div>

  <div class="absolute rounded-full animate-moveVariable z-0 top-1/2 right-1/3 w-[20rem] h-[20rem] md:w-[35rem] md:h-[35rem] bg-primary/20"></div>
        <div class="absolute bottom-0 top-0 z-[1] h-full w-full backdrop-blur-[8px]">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 700 700" width="700" height="700" opacity="1">
            <defs>
                <filter id="nnnoise-filter" x="-20%" y="-20%" width="140%" height="140%" filterUnits="objectBoundingBox" primitiveUnits="userSpaceOnUse" color-interpolation-filters="linearRGB">
                <feTurbulence type="turbulence" baseFrequency="0.122" numOctaves="4" seed="15" stitchTiles="stitch" x="0%" y="0%" width="100%" height="100%" result="turbulence"></feTurbulence>
                <feSpecularLighting surfaceScale="40" specularConstant="0.5" specularExponent="20" lighting-color="#2463EB" x="0%" y="0%" width="100%" height="100%" in="turbulence" result="specularLighting">
                    <feDistantLight azimuth="3" elevation="130"></feDistantLight>
                </feSpecularLighting>
                </filter>
            </defs>
            <rect width="700" height="700" fill="#ffffff00"></rect>
            <rect width="700" height="700" fill="#2463eb" filter="url(#nnnoise-filter)"></rect>
            </svg>
        </div>
  </div>

</div>
