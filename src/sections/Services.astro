---
import H2 from '../components/TextComponents/H2.astro';

interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<div class={`flex flex-col mb-20 gap-y-8 bg-white px-5 xl:px-[30rem] pt-14 xl:py-44 border-primary_super ${className}`}>
  <H2>{title}</H2>
  <slot />
  
</div>
